/* ------------------------------
   ROOT VARIABLE DEFINITIONS
------------------------------ */
:root {
    --bg-body: #f5f5f7;
    --bg-elevated: #ffffff;
    --bg-muted: #f2f2f5;

    --text-main: #050509;
    --text-soft: #5c5c6a;
    --text-softer: #8f8fa0;
    --text-inverse: #ffffff;

    --accent: #111827;
    --accent-soft: #e5e7eb;
    --accent-subtle: rgba(17, 24, 39, 0.08);

    --border-subtle: rgba(15, 23, 42, 0.08);

    --radius-lg: 24px;
    --radius-md: 16px;
    --radius-pill: 999px;

    --shadow-soft: 0 20px 55px rgba(15,23,42,0.12);
    --shadow-subtle: 0 10px 30px rgba(15,23,42,0.05);

    --font-sans: system-ui, -apple-system, BlinkMacSystemFont, "SF Pro Text", "Inter", sans-serif;

    --transition-fast: 0.15s ease-out;
    --transition-mid: 0.25s ease-out;
}

/* ------------------------------
   DARK MODE VARIABLES + SURFACES
------------------------------ */
body.dark-mode {
    --bg-body: #020617;
    --bg-elevated: #020617;
    --bg-muted: #020617;

    --text-main: #f9fafb;
    --text-soft: #e5e7eb;
    --text-softer: #9ca3af;

    /* mint accent for dark */
    --accent: #22c55e;
    --accent-soft: #15803d;
    --accent-subtle: rgba(34,197,94,0.16);

    --border-subtle: rgba(148, 163, 184, 0.35);

    background: radial-gradient(circle at top, #020617 0, #020617 40%, #020617 100%);
}

/* Reset-ish */
*,
*::before,
*::after {
    box-sizing: border-box;
}

html, body {
    margin: 0;
    padding: 0;
}

body {
    font-family: var(--font-sans);
    color: var(--text-main);
    background:
        radial-gradient(circle at top, #ffffff 0, #f5f5f7 45%, #f1f1f4 100%);
    -webkit-font-smoothing: antialiased;
    line-height: 1.6;
}

img {
    max-width: 100%;
    display: block;
}

a {
    color: inherit;
    text-decoration: none;
}

button {
    font-family: inherit;
}

/* Layout */
.container {
    width: 100%;
    max-width: 1120px;
    margin: 0 auto;
    padding: 0 20px;
}

.section {
    padding: 64px 0;
}

.section-muted {
    background: var(--bg-muted);
}

.section-muted-top {
    padding-top: 32px;
    padding-bottom: 72px;
    background: linear-gradient(to bottom, rgba(255,255,255,0.6), var(--bg-muted));
}

body.dark-mode .section-muted {
    background: #020617;
}

body.dark-mode .section-muted-top {
    background: linear-gradient(to bottom, #020617, #020617);
}

/* Header / nav */
.site-header {
    position: sticky;
    top: 0;
    z-index: 50;
    backdrop-filter: blur(18px);
    background: linear-gradient(to bottom, rgba(245,245,247,0.9), rgba(245,245,247,0.6));
    border-bottom: 1px solid rgba(148, 163, 184, 0.16);
    transition: background var(--transition-mid), box-shadow var(--transition-mid), transform var(--transition-fast);
}

.site-header.is-scrolled {
    background: rgba(248, 250, 252, 0.98);
    box-shadow: 0 12px 30px rgba(15,23,42,0.06);
}

body.dark-mode .site-header {
    background: linear-gradient(to bottom, rgba(15,23,42,0.98), rgba(15,23,42,0.94));
    border-bottom: 1px solid rgba(15,23,42,0.9);
}

body.dark-mode .site-header.is-scrolled {
    box-shadow: 0 18px 40px rgba(0,0,0,0.65);
}

.nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 68px;
    gap: 24px;
}

/* Logo + left cluster */
.logo {
    display: inline-flex;
    align-items: center;
    gap: 10px;
}

.logo-text {
    font-weight: 600;
    letter-spacing: 0.04em;
    font-size: 0.95rem;
    text-transform: uppercase;
}

.logo-accent {
    color: #4b5563;
}

body.dark-mode .logo-accent {
    color: #e5e7eb;
}

/* nav-left to keep diamond + name inline */
.nav-left {
    display: flex;
    align-items: center;
    gap: 14px;
}

/* Nav */
.nav-links {
    display: flex;
    align-items: center;
    gap: 20px;
    font-size: 0.9rem;
    color: var(--text-soft);
}

.nav-links a {
    padding: 4px 0;
    position: relative;
}

.nav-links a::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 0;
    height: 1px;
    background: var(--accent);
    transition: width var(--transition-fast);
}

.nav-links a:hover::after,
.nav-links a.is-active::after {
    width: 100%;
}

/* Buttons (header) */
.nav-actions {
    display: flex;
    align-items: center;
    gap: 10px;
}

/* Theme toggle – diamond */
.theme-toggle {
    width: 18px;
    height: 18px;
    position: relative;
    cursor: pointer;
    border: none;
    background: none;
    padding: 0;
}

.theme-toggle::before {
    content: "";
    position: absolute;
    inset: 0;
    background: #e5e7eb;
    border: 1px solid rgba(0,0,0,0.25);
    transform: rotate(45deg);
    border-radius: 4px;
    transition: background 0.2s ease, border-color 0.2s ease, box-shadow 0.2s ease;
}

body.dark-mode .theme-toggle::before {
    background: #22c55e;
    border-color: rgba(34,197,94,0.9);
    box-shadow: 0 0 18px rgba(34,197,94,0.7);
}

/* Buttons */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-pill);
    padding: 8px 18px;
    font-size: 0.9rem;
    font-weight: 500;
    border: 1px solid transparent;
    cursor: pointer;
    transition:
        transform var(--transition-fast),
        box-shadow var(--transition-fast),
        background var(--transition-fast),
        border-color var(--transition-fast);
    white-space: nowrap;
}

.btn-primary {
    background: var(--accent);
    color: var(--text-inverse);
    box-shadow: 0 16px 45px rgba(15,23,42,0.3);
}

.btn-primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 20px 55px rgba(15,23,42,0.35);
}

body.dark-mode .btn-primary {
    box-shadow: 0 16px 45px rgba(0,0,0,0.7);
}

.btn-ghost {
    background: rgba(255,255,255,0.7);
    border-color: rgba(148, 163, 184, 0.4);
    color: var(--text-main);
}

.btn-ghost:hover {
    background: #ffffff;
}

body.dark-mode .btn-ghost {
    background: rgba(15,23,42,0.9);
    border-color: rgba(148,163,184,0.6);
    color: #e5e7eb;
}

/* Nav toggle */
.nav-toggle {
    display: none;
    flex-direction: column;
    justify-content: center;
    gap: 4px;
    width: 32px;
    height: 32px;
    border-radius: 999px;
    border: 1px solid rgba(148, 163, 184, 0.45);
    background: rgba(255,255,255,0.75);
    padding: 0;
}

.nav-toggle span {
    display: block;
    width: 14px;
    height: 1.5px;
    background: #111827;
    margin: 0 auto;
}

/* Hero */
.hero {
    padding: 56px 0 72px;
}

.hero-slim {
    padding: 40px 0 36px;
}

.hero-grid {
    display: grid;
    grid-template-columns: minmax(0, 1.3fr) minmax(0, 1.1fr);
    gap: 40px;
    align-items: center;
}

.hero-grid-slim {
    grid-template-columns: minmax(0, 1.3fr) minmax(0, 1fr);
}

.hero-copy h1 {
    font-size: clamp(2.4rem, 3.1vw, 3rem);
    line-height: 1.08;
    margin: 10px 0 14px;
    letter-spacing: -0.03em;
}

.hero-subtitle {
    color: var(--text-soft);
    max-width: 480px;
    margin: 0 0 20px;
}

.eyebrow {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--text-softer);
}

.hero-cta-row {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 18px;
}

.hero-secondary {
    font-weight: 500;
}

.hero-metadata {
    display: flex;
    flex-wrap: wrap;
    gap: 18px;
    font-size: 0.8rem;
    color: var(--text-softer);
}

.hero-metadata .meta-label {
    display: block;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 0.7rem;
}

.meta-value {
    font-weight: 500;
    color: var(--text-main);
}

/* Hero visual */
.hero-visual {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 14px;
    transform-style: preserve-3d;
}

.hero-card {
    background: radial-gradient(circle at top left, #ffffff, #e5e7eb);
    border-radius: var(--radius-lg);
    padding: 18px 18px 16px;
    box-shadow: var(--shadow-soft);
    border: 1px solid rgba(148, 163, 184, 0.3);
    overflow: hidden;
}

body.dark-mode .hero-card {
    background: radial-gradient(circle at top left, #020617, #020617);
    border-color: rgba(148,163,184,0.5);
    box-shadow: 0 20px 60px rgba(0,0,0,0.8);
}

.hero-card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 12px;
}

.hero-card-body {
    background: radial-gradient(circle at top, #020617, #020617 40%, #020617);
    border-radius: calc(var(--radius-lg) - 10px);
    padding: 14px 14px;
    color: #e5e7eb;
    font-size: 0.9rem;
    position: relative;
    overflow: hidden;
}

.hero-card-body::before {
    content: "";
    position: absolute;
    inset: -40%;
    background:
        radial-gradient(circle at 0 0, rgba(56,189,248,0.16), transparent 55%),
        radial-gradient(circle at 100% 0, rgba(52,211,153,0.2), transparent 55%);
    mix-blend-mode: screen;
    opacity: 0.65;
    pointer-events: none;
}

body.dark-mode .hero-card-body {
    background: radial-gradient(circle at top, #020617, #020617 50%, #020617);
}
/* DARK MODE FIX — pill filter visibility */
body.dark-mode .pill-filter {
    color: #e5e7eb;                 /* readable soft white text */
    background: rgba(255,255,255,0.05);
    border-color: rgba(255,255,255,0.18);
}

body.dark-mode .pill-filter:hover {
    background: rgba(255,255,255,0.12);
}

body.dark-mode .pill-filter.is-active {
    background: #22c55e;            /* mint accent */
    border-color: #22c55e;
    color: #052e16;                 /* deep green readable text */
}

/* Fix label colours inside demo card headers */
body.dark-mode .demo-card-header h2,
body.dark-mode .demo-description {
    color: #e5e7eb;
}

.hero-stream {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 10px;
    z-index: 1;
}

.stream-row {
    display: grid;
    grid-template-columns: auto minmax(0, 1fr);
    gap: 10px;
}

.stream-avatar {
    width: 22px;
    height: 22px;
    border-radius: 999px;
    background: radial-gradient(circle at 20% 20%, #111827, #374151);
    color: #e5e7eb;
    font-size: 0.72rem;
    display: flex;
    align-items: center;
    justify-content: center;
}

.stream-avatar-agent {
    background: radial-gradient(circle at 20% 20%, #22c55e, #15803d);
}

.stream-row-user p {
    background: rgba(15,23,42,0.25);
}

.stream-row-agent p {
    background: linear-gradient(135deg, #16a34a, #4ade80);
    color: #052e16;
}

.stream-row p {
    margin: 0;
    padding: 8px 10px;
    border-radius: 999px;
    font-size: 0.78rem;
}

.stream-row.faint p {
    background: rgba(15,23,42,0.5);
    color: #9ca3af;
    font-size: 0.72rem;
}

.hero-card-footer {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-top: 10px;
}

/* Hero stats */
.hero-stats-card {
    align-self: flex-start;
    background: rgba(255,255,255,0.9);
    border-radius: var(--radius-md);
    padding: 14px 16px;
    border: 1px solid rgba(148, 163, 184, 0.3);
    box-shadow: var(--shadow-subtle);
}

body.dark-mode .hero-stats-card {
    background: rgba(15,23,42,0.98);
    border-color: rgba(148,163,184,0.6);
    box-shadow: 0 16px 45px rgba(0,0,0,0.8);
}

.hero-stats-card .small-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-softer);
}

.hero-stats-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 8px;
    margin-top: 8px;
    font-size: 0.82rem;
}

.stat-number {
    display: block;
    font-weight: 600;
    font-size: 1rem;
}

.stat-label {
    color: var(--text-soft);
}

/* Hero note block */
.hero-visual-note {
    display: flex;
    justify-content: flex-end;
}

.note-card {
    background: rgba(255,255,255,0.9);
    border-radius: var(--radius-md);
    border: 1px solid var(--border-subtle);
    box-shadow: var(--shadow-subtle);
    padding: 16px 18px;
    font-size: 0.9rem;
    max-width: 320px;
}

body.dark-mode .note-card {
    background: rgba(15,23,42,0.98);
    border-color: rgba(148,163,184,0.6);
}

/* Pills */
.pill {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-pill);
    padding: 4px 10px;
    font-size: 0.75rem;
    border: 1px solid transparent;
    white-space: nowrap;
}

.pill-soft {
    background: var(--accent-subtle);
    color: var(--accent);
}

.pill-outline {
    border-color: rgba(148, 163, 184, 0.45);
    color: var(--text-soft);
}

/* Status dot */
.status-dot::before {
    content: "";
    display: inline-block;
    width: 7px;
    height: 7px;
    border-radius: 999px;
    background: #22c55e;
    box-shadow: 0 0 0 4px rgba(34,197,94,0.35);
    margin-right: 6px;
}

/* Trust strip */
.trust-strip {
    padding: 22px 0;
    border-top: 1px solid rgba(148,163,184,0.18);
    border-bottom: 1px solid rgba(148,163,184,0.12);
    background: linear-gradient(to right, rgba(255,255,255,0.9), rgba(243,244,246,0.9));
}

body.dark-mode .trust-strip {
    background: linear-gradient(to right, rgba(15,23,42,0.98), rgba(15,23,42,0.94));
    border-top: 1px solid rgba(15,23,42,0.9);
    border-bottom: 1px solid rgba(15,23,42,0.9);
}

.trust-grid {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    font-size: 0.85rem;
}

.trust-label {
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-size: 0.72rem;
    color: var(--text-softer);
}

.trust-icons {
    display: flex;
    flex-wrap: wrap;
    gap: 10px 18px;
    color: var(--text-soft);
}

/* Section header */
.section-header {
    max-width: 580px;
    margin-bottom: 28px;
}

.section-header h2 {
    font-size: 1.6rem;
    margin: 0 0 8px;
    letter-spacing: -0.02em;
}

.section-header p {
    margin: 0;
    color: var(--text-soft);
}

/* Cards */
.cards-grid {
    display: grid;
    gap: 20px;
}

.cards-grid-3 {
    grid-template-columns: repeat(3, minmax(0, 1fr));
}

.card {
    background: rgba(255,255,255,0.95);
    border-radius: var(--radius-md);
    padding: 18px 18px 16px;
    border: 1px solid var(--border-subtle);
    box-shadow: var(--shadow-subtle);
}

body.dark-mode .card {
    background: rgba(15,23,42,0.98);
    border-color: rgba(148,163,184,0.6);
    box-shadow: 0 16px 45px rgba(0,0,0,0.85);
}

.card h3 {
    margin-top: 0;
    margin-bottom: 8px;
    font-size: 1.1rem;
}

.card p {
    margin-top: 0;
    margin-bottom: 12px;
    font-size: 0.95rem;
    color: var(--text-soft);
}

.card-list {
    padding-left: 18px;
    margin: 0;
    font-size: 0.9rem;
    color: var(--text-soft);
}

/* Process */
.process-steps {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 18px;
}

.process-step {
    display: grid;
    grid-template-columns: auto minmax(0, 1fr);
    gap: 18px;
    align-items: flex-start;
    padding: 16px 18px;
    border-radius: var(--radius-md);
    background: rgba(255,255,255,0.85);
    border: 1px solid var(--border-subtle);
    position: relative;
    overflow: hidden;
}

body.dark-mode .process-step {
    background: rgba(15,23,42,0.98);
    border-color: rgba(148,163,184,0.6);
}

.process-step::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, rgba(56,189,248,0), rgba(56,189,248,0.12), rgba(56,189,248,0));
    transform: translateX(-100%);
    opacity: 0;
    pointer-events: none;
    transition: transform 0.4s ease-out, opacity 0.4s ease-out;
}

.step-number {
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.16em;
    text-transform: uppercase;
    color: var(--text-softer);
}

.process-step h3 {
    margin: 0 0 4px;
    font-size: 1.02rem;
}

.process-step p {
    margin: 0;
    font-size: 0.93rem;
    color: var(--text-soft);
}

.process-cta {
    margin-top: 26px;
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    align-items: center;
    font-size: 0.95rem;
}

/* DEMOS */
.demo-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
}

.pill-group {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
}

.pill-filter {
    background: rgba(15,23,42,0.04);
    border-color: rgba(148, 163, 184, 0.45);
    cursor: pointer;
}

.pill-filter.is-active {
    background: var(--accent);
    border-color: var(--accent);
    color: #ffffff;
}

.demo-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 18px;
}

.demo-card {
    background: rgba(255,255,255,0.95);
    border-radius: var(--radius-md);
    padding: 16px 18px;
    border: 1px solid var(--border-subtle);
    box-shadow: var(--shadow-subtle);
    cursor: pointer;
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast), transform var(--transition-fast), background var(--transition-fast);
    position: relative;
}

body.dark-mode .demo-card {
    background: rgba(15,23,42,0.98);
    border-color: rgba(148,163,184,0.6);
    box-shadow: 0 16px 45px rgba(0,0,0,0.85);
}

.demo-card.is-active {
    border-color: rgba(15,23,42,0.85);
    box-shadow: 0 20px 60px rgba(15,23,42,0.22);
    background: #ffffff;
    transform: translateY(-2px);
}

body.dark-mode .demo-card.is-active {
    border-color: var(--accent);
    background: #020617;
    box-shadow: 0 20px 60px rgba(0,0,0,0.9);
}

.demo-card-header {
    display: flex;
    flex-direction: column;
    gap: 6px;
    margin-bottom: 8px;
}

.demo-card-header h2 {
    margin: 0;
    font-size: 1.05rem;
}

.demo-description {
    margin: 0 0 10px;
    font-size: 0.92rem;
    color: var(--text-soft);
}

.demo-media {
    border-radius: 18px;
    overflow: hidden;
    background: radial-gradient(circle at top, #020617, #020617 50%, #020617);
    color: #e5e7eb;
    padding: 16px 14px;
    font-size: 0.86rem;
    margin-bottom: 10px;
}

body.dark-mode .demo-media {
    background: radial-gradient(circle at top, #020617, #020617 50%, #020617);
}

.demo-media iframe,
.demo-media video,
.demo-media audio {
    width: 100%;
    border: none;
    border-radius: 12px;
}

.demo-placeholder {
    display: grid;
    grid-template-columns: auto minmax(0, 1fr);
    gap: 10px;
    align-items: center;
}

.demo-coming-soon {
    margin-top: 12px;
    font-size: 0.85rem;
    opacity: 0.7;
}

.play-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 26px;
    height: 26px;
    border-radius: 999px;
    background: #f97316;
    color: #111827;
    font-size: 0.8rem;
    font-weight: 600;
}

.demo-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    font-size: 0.8rem;
    color: var(--text-softer);
}

/* Contact */
.contact-grid {
    display: grid;
    grid-template-columns: minmax(0, 1.6fr) minmax(0, 1.1fr);
    gap: 28px;
    align-items: flex-start;
}

.contact-form {
    background: rgba(255,255,255,0.98);
    border-radius: var(--radius-lg);
    padding: 20px 22px;
    border: 1px solid var(--border-subtle);
    box-shadow: var(--shadow-soft);
}

body.dark-mode .contact-form {
    background: rgba(15,23,42,0.98);
    border-color: rgba(148,163,184,0.6);
    box-shadow: 0 20px 55px rgba(0,0,0,0.9);
}

.form-row {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    margin-bottom: 14px;
}

.form-row-submit {
    align-items: center;
}

.form-field {
    flex: 1;
    min-width: 0;
}

.form-field label {
    display: block;
    font-size: 0.8rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    margin-bottom: 4px;
    color: var(--text-softer);
}

.form-field input,
.form-field textarea,
.form-field select {
    width: 100%;
    border-radius: 12px;
    border: 1px solid rgba(148, 163, 184, 0.65);
    padding: 9px 11px;
    font-size: 0.9rem;
    font-family: inherit;
    background: rgba(249,250,251,0.85);
    outline: none;
    transition: border-color var(--transition-fast), box-shadow var(--transition-fast), background var(--transition-fast);
}

.form-field textarea {
    resize: vertical;
    min-height: 90px;
}

.form-field input:focus,
.form-field textarea:focus,
.form-field select:focus {
    border-color: var(--accent);
    background: #ffffff;
    box-shadow: 0 0 0 1px #11182710, 0 0 0 2px rgba(15,23,42,0.15);
}

body.dark-mode .form-field input,
body.dark-mode .form-field textarea,
body.dark-mode .form-field select {
    background: rgba(15,23,42,0.9);
    color: #e5e7eb;
}

body.dark-mode .form-field input:focus,
body.dark-mode .form-field textarea:focus,
body.dark-mode .form-field select:focus {
    border-color: var(--accent);
    box-shadow: 0 0 0 1px rgba(34,197,94,0.4);
}

.form-footnote {
    font-size: 0.8rem;
    color: var(--text-softer);
    margin: 0;
}

.contact-aside {
    display: flex;
    flex-direction: column;
    gap: 14px;
}

.contact-aside-card {
    background: rgba(255,255,255,0.95);
    border-radius: var(--radius-md);
    padding: 16px 18px;
    border: 1px solid var(--border-subtle);
    box-shadow: var(--shadow-subtle);
    font-size: 0.9rem;
}

body.dark-mode .contact-aside-card {
    background: rgba(15,23,42,0.98);
    border-color: rgba(148,163,184,0.6);
}

.contact-aside-card.subtle {
    background: transparent;
    box-shadow: none;
}

/* Typography helpers */
.small-label {
    font-size: 0.78rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--text-softer);
}

/* Aside list */
.aside-list {
    margin: 8px 0 0;
    padding-left: 18px;
    color: var(--text-soft);
    font-size: 0.88rem;
}

/* Footer */
.site-footer {
    border-top: 1px solid rgba(148,163,184,0.2);
    padding: 26px 0 28px;
    background: rgba(248,250,252,0.9);
    margin-top: 20px;
}

body.dark-mode .site-footer {
    background: rgba(15,23,42,0.98);
    border-top-color: rgba(15,23,42,0.9);
}

.footer-grid {
    display: grid;
    grid-template-columns: minmax(0, 2fr) auto;
    gap: 16px;
    align-items: center;
}

.footer-main {
    display: flex;
    flex-direction: column;
    gap: 6px;
}

.footer-logo {
    transform: scale(0.9);
    transform-origin: left center;
}

.footer-copy {
    margin: 0;
    font-size: 0.86rem;
    color: var(--text-soft);
}

.footer-links {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 6px;
    font-size: 0.86rem;
    color: var(--text-soft);
}

.footer-links a:hover {
    color: var(--text-main);
}

.footer-meta {
    grid-column: 1 / -1;
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    font-size: 0.8rem;
    color: var(--text-softer);
}

/* Animations */
[data-animate] {
    opacity: 0;
    transform: translateY(18px);
    transition: opacity 0.5s ease-out, transform 0.5s ease-out;
}

[data-animate].is-visible {
    opacity: 1;
    transform: translateY(0);
}

[data-animate="fade-up-delayed"] {
    transition-delay: 0.15s;
}

.glow-soft {
    box-shadow:
        0 20px 60px rgba(15,23,42,0.28),
        0 0 0 1px rgba(148,163,184,0.35),
        0 0 60px rgba(56,189,248,0.35);
}

.float-soft {
    animation: floatSoft 7s ease-in-out infinite;
}

.hover-lift {
    transition: transform var(--transition-mid), box-shadow var(--transition-mid), border-color var(--transition-mid);
}

.hover-lift:hover {
    transform: translateY(-4px) translateZ(0);
    box-shadow: 0 22px 70px rgba(15,23,42,0.18);
    border-color: rgba(15,23,42,0.16);
}

.hover-line:hover::after {
    transform: translateX(0);
    opacity: 1;
}

/* Parallax */
[data-parallax] {
    will-change: transform;
    transition: transform 0.35s ease-out;
}

/* Keyframes */
@keyframes floatSoft {
    0% { transform: translateY(0); }
    50% { transform: translateY(-6px); }
    100% { transform: translateY(0); }
}

/* Page-specific */
.page-demos .hero {
    padding-bottom: 40px;
}

.page-contact .hero {
    padding-bottom: 32px;
}

/* Responsive */
@media (max-width: 900px) {
    .hero-grid,
    .hero-grid-slim,
    .cards-grid-3,
    .demo-grid,
    .contact-grid,
    .footer-grid {
        grid-template-columns: minmax(0, 1fr);
    }

    .hero-visual {
        order: -1;
    }

    .hero {
        padding-top: 32px;
    }

    .footer-links {
        align-items: flex-start;
    }
}

@media (max-width: 768px) {
    .nav-toggle {
        display: flex;
    }

    .nav-links {
        position: absolute;
        inset: 68px 16px auto 16px;
        background: rgba(248,250,252,0.98);
        border-radius: 18px;
        border: 1px solid rgba(148,163,184,0.4);
        padding: 10px 14px;
        flex-direction: column;
        gap: 6px;
        box-shadow: 0 14px 40px rgba(15,23,42,0.22);
        transform-origin: top;
        transform: scaleY(0.8);
        opacity: 0;
        pointer-events: none;
        transition: opacity var(--transition-fast), transform var(--transition-fast);
    }

    .nav-links.is-open {
        opacity: 1;
        transform: scaleY(1);
        pointer-events: auto;
    }

    .nav-actions {
        gap: 6px;
    }

    .hero {
        padding-top: 28px;
        padding-bottom: 52px;
    }

    .hero-card {
        border-radius: 20px;
    }

    .hero-stats-grid {
        grid-template-columns: repeat(3, minmax(0, 1fr));
    }

    .demo-grid {
        grid-template-columns: minmax(0, 1fr);
    }

    .cards-grid-3 {
        grid-template-columns: minmax(0, 1fr);
    }
}

@media (max-width: 520px) {
    .nav-actions .btn-ghost {
        display: none;
    }

    .hero-card-body {
        padding: 12px;
    }

    .hero-copy h1 {
        font-size: 2.1rem;
    }

    .hero-stats-grid {
        grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .contact-form {
        padding: 16px 16px;
        border-radius: 20px;
    }
}
